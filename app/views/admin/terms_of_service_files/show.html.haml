- content_for :page_title do
  = t(".title")

- if @current_file
  = link_to t(".terms_of_service"), @current_file.attachment.url
  = link_to t(".delete"), main_app.admin_terms_of_service_files_path, method: "delete", data: { confirm: t(".confirm_delete") }
- else
  = t(".no_files")
  = t(".using_default_terms_html", tos_link: link_to_platform_terms)

= form_for [main_app, :admin, @new_file] do |f|
  = f.label :attachment
  = f.file_field :attachment
  = f.submit
